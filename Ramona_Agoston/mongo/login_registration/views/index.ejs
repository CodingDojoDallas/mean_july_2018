<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <!-- link for JQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <!-- Boostrap CDN -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4"
         crossorigin="anonymous">
        <title>Registration | Login</title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center my-5"><u>Registration | Login</u></h1>
<!-- ============== REG ERROR MESSAGES ==================== -->
            <% if(messages.registration) { %>
                <% for (var x of messages.registration) { %>
                    <h3 style="color:red"><%= x %></h3>
                <% } %>
            <% } %>
            <div class="row">
                <div class="col">
<!-- ============== REGISTRATION ==================== -->
                    <h3>Registration</h3>
                    <form class="form-control" action="/registration" method="POST">
                        <div class="form-row ">
                            <div class="col-md-6 mb-3">
                                <label>First name</label>
                                <input type="text" class="form-control" name="fname" placeholder="First name">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Last name</label>
                                <input type="text" class="form-control" name="lname" placeholder="Last name">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label>Email</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">@</span>
                                    </div>
                                    <input type="email" class="form-control" name="email">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-12 mb-3">
                                <label>Birthday</label>
                                <input type="date" class="form-control" name="bday">
                            </div>
                            <div class="col-md-12 mb-3">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                        </div>
                            <button class="btn btn-outline-dark" type="submit">Register</button>
                    </form>
                </div>
                    <div class="col">
<!-- ============== LOIGIN ERROR MESSAGES ==================== -->
                        <% if(messages.login) { %>
                            <% for (var x of messages.login) { %>
                                <h3 style="color:red"><%= x %></h3>
                            <% } %>
                        <% } %>
<!-- ============== LOGIN ==================== -->
                    <h3>Login</h3>
                    <form class="form-control" action="/login" method="POST">
                        <div class="form-group">
                            <label>Email address</label>
                            <input type="email" class="form-control" name="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-outline-dark">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
