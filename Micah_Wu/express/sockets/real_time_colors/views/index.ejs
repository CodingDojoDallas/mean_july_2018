<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Real-Time Color</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
        $(document).ready(function (){
            var socket = io.connect();
            $('#red').click(function(){
                var input_color = this.id;
                socket.emit("bunClick",input_color)
            });
            $('#blue').click(function(){
                var input_color = this.id;
                socket.emit("bunClick",input_color)
            });
            $('#green').click(function(){
                var input_color = this.id;
                socket.emit("bunClick",input_color)
            });
            socket.on('current_color',function(data){
                $('body').css("background-color",data);
            })
         });
    </script>
<style>
    h1{
        text-align: center;
    }
    body{
        background-color:black;
        color:azure;
    }
</style>
</head>
<body>
    <div class="container" >
        <div class = "row justify-content-center">
            <div class = "col-lg">
                <h1>Real-Time Color</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <button id="red" class="btn btn-danger" role="button">RED</button>
            <button id="blue" class="btn btn-primary" role="button">BLUE</button>
            <button id="green" class="btn btn-success" role="button">GREEN</button>
        </div>

        <div class="row justify-content-center">
            <h4>Push the button to update the Color!</h4>
        </div>
    </div>
</body>
</html>