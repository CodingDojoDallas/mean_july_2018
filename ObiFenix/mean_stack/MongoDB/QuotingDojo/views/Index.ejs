<div class="col-sm-8">
   <div class="row justify-content-center">
      <h1>Welcome to Quoting Dojo</h1>
   </div>

   <div class="row">
      <div class="col-sm-8">
         <% if(typeof(errors) != 'undefined' ) { %>
            <% for (var x in errors) { %>
               <h3><%= errors[x].message %></h3>
            <% } %>
         <% } %>
      </div>
   </div>

   <div class="card col-sm-8" style="padding:4rem 0rem 0rem 8rem;">
      <div class="row">
         <form class="col-8" action="/quotes" method="POST">
            <div class="form-group row">
               <label class="col-sm-3 col-form-label">Your name:</label>
               <div class="col-sm-9">
                  <input name="name" type="text" class="form-control">
               </div>
            </div>
            <div class="form-group row">
               <label for="inputPassword" class="col-sm-3 col-form-label">Your quote:</label>
               <div class="col-sm-9">
                  <textarea name="quote" cols="30" rows="5"></textarea>
               </div>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
         </form>
      </div>
   </div>
</div>
